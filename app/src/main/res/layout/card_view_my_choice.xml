<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/new_choice_card_view"
            android:layout_marginEnd="@dimen/choice_card_margin"
            android:layout_marginStart="@dimen/choice_card_margin"
            style="@style/card_view_basic_style">

        <EditText
                android:id="@+id/my_choice_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/MyEditTextTheme"
                android:layout_margin="@dimen/margin_edit_text_my_post"
                android:hint="@string/type_your_choice_here"/>

    </android.support.v7.widget.CardView>

</LinearLayout>