<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

    <TextView
            android:id="@+id/single_item_question"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:layout_height="wrap_content"
            android:text="Whats your favorite name?"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_below="@+id/single_item_question">

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/sneak_peak_choice_1"
                  android:layout_below="@+id/single_item_question"
                  android:text="Choice 1: Sam"
                  android:layout_marginTop="10dp"
                  android:layout_weight=".3"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/post_location"
                  android:layout_below="@+id/single_item_question"
                  android:text="College Park,  MD"
                  android:layout_marginTop="10dp"
                  android:layout_toEndOf="@+id/sneak_peak_choice_1"
                  android:layout_weight=".7"/>

    </LinearLayout>
</RelativeLayout>